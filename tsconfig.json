{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "outDir": "out",
    "lib": [
      // For String.replaceAll
      "ES2021",

      // For @apollo/client "WindowOrWorkerGlobalScope" and "Response"
      "DOM"
